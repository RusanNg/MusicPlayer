<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="72dp">

    <TextView
        android:id="@+id/tv_artist_detail_track_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:lines="1"
        android:text="Artist"
        android:textSize="16sp"
        android:textColor="@color/colorWhite"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        />

    <ImageButton
        android:id="@+id/ib_artist_detail_track_options"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_options_horiz_black_24dp" />

    <TextView
        android:id="@+id/tv_artist_detail_track_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@id/ib_artist_detail_track_options"
        android:text="00:00"
        android:layout_marginEnd="16dp"
        android:textColor="@color/colorSubtitle" />



</RelativeLayout>