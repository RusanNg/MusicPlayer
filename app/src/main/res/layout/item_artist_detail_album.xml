<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:foreground="?attr/selectableItemBackground"
    android:paddingBottom="4dp"
    android:paddingTop="4dp">

    <ImageView
        android:id="@+id/iv_artist_detail_album_art"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/ic_voice_black_24dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"
        />

    <ImageView
        android:id="@+id/iv_artist_detail_album_extend"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/anim_expand"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="16dp"
        />

    <ImageButton
        android:id="@+id/ib_artist_detail_album_options"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="16dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf ="@id/iv_artist_detail_album_extend"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_options_horiz_black_24dp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/iv_artist_detail_album_art"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_toStartOf="@id/ib_artist_detail_album_options"
        >

        <TextView
            android:id="@+id/tv_artist_detail_album_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Albun Title"
            android:textSize="16sp"
            android:textColor="@color/colorWhite"
            android:paddingBottom="4dp"
            />

        <TextView
            android:id="@+id/tv_artist_detail_album_numtracks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 track"
            android:textColor="@color/colorSubtitle"
            android:textSize="12sp"
            android:lines="1"
            android:ellipsize="end"
            android:layout_below="@id/tv_artist_detail_album_title"
            />

    </RelativeLayout>

</RelativeLayout>